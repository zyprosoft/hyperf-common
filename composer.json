{
    "name": "zyprosoft/hyperf-common",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "zyprosoft inc base hyperf adapter",
    "autoload": {
        "psr-4": {
            "ZYProSoft\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-swoole": ">=4.6.3",
        "hyperf/constants": "~2.1.0",
        "hyperf/async-queue": "~2.1.0",
        "hyperf/model-cache": "~2.1.0",
        "hyperf/validation": "~2.1.0",
        "hyperf/testing": "~2.1.0",
        "hyperf/crontab": "~2.1.0",
        "hyperf/metric": "~2.1.0",
        "hyperf/session": "~2.1.0",
        "hyperf/logger": "~2.1.0",
        "hyperf/config": "~2.1.0",
        "hyperf/utils": "~2.1.0",
        "hyperf/filesystem": "~2.1.0",
        "overtrue/flysystem-qiniu": "^1.0",
        "qbhy/hyperf-multi-env": "^2.0",
        "qbhy/hyperf-testing": "^1.0",
        "ext-json": "*",
        "96qbhy/hyperf-auth": "^2.2",
        "overtrue/wechat": "~5.0",
        "doctrine/dbal": "^3.0",
        "gregwar/captcha": "1.*",
        "phpmailer/phpmailer": "^6.2"
    },
    "require-dev": {
        "swoole/ide-helper": "^4.5",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12.18",
        "hyperf/devtool": "~2.1.0",
        "hyperf/testing": "~2.1.0"
    },
    "config": {
        "sort-packages": true,
        "secure-http": false
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "ZYProSoft\\ConfigProvider"
        }
    }
}
